<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hqyj.twelve.dao.RoleDao">

    <resultMap id="select" type="com.hqyj.twelve.pojo.Role">
        <id column="role_id" property="roleId"></id>
        <id column="role_name" property="roleName"></id>
    </resultMap>

    <select id="queryRoleById" parameterType="int" resultMap="select">
        select role_id,role_name from role where role_id=#{roleId}
    </select>

</mapper>